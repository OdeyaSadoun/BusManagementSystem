<Window x:Class="PlGui.AdminShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="AdminShow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="r3.jpeg"/>
            </Grid.Background>
            <Button x:Name="Card" Content="Cards" HorizontalAlignment="Left" Margin="41,66,0,0" VerticalAlignment="Top" Width="144" RenderTransformOrigin="-0.979,-0.291" Click="Card_Click" FontWeight="Bold" FontSize="20"/>
            <Button x:Name="lvBus" Content="Buses" HorizontalAlignment="Left" Margin="41,131,0,0" VerticalAlignment="Top" Width="144" FontWeight="Bold" FontSize="20" Click="lvBus_Click"/>
            <Button x:Name="lvLine" Content="Lines" HorizontalAlignment="Left" Margin="41,190,0,0" VerticalAlignment="Top" Width="144" FontWeight="Bold" FontSize="20" Click="lvLine_Click"/>
        </Grid>

    </Grid>
</Window>
