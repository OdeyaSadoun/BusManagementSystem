<Window x:Class="PlGui.CardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="CardWindow" Height="400" Width="600" Icon="Credit-removebg-preview.png">
    <Grid Margin="0,0,-0.4,-29.6">
        <Grid.Background>
            <ImageBrush ImageSource="r3.jpeg"/>
        </Grid.Background>
        <Button x:Name="Charging1" Content="30₪" HorizontalAlignment="Left" Margin="337,89,0,0" VerticalAlignment="Top" Height="27" Width="75" FontWeight="Bold" FontSize="20" Click="Charging1_Click"/>
        <Button x:Name="Balance" Content="Balance" HorizontalAlignment="Left" Margin="155,89,0,0" VerticalAlignment="Top" Height="27" Width="104" FontWeight="Bold" FontSize="20" Click="Balance_Click"/>
