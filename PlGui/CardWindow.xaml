        <Label x:Name="ChargeCard" Content="Charging Card" HorizontalAlignment="Left" Margin="298,33,0,0" VerticalAlignment="Top" Width="152" Foreground="White" FontWeight="Bold" FontSize="20"/>
        <Button x:Name="Charging3" Content="100₪" HorizontalAlignment="Left" Margin="337,210,0,0" VerticalAlignment="Top" Height="27" Width="75" FontWeight="Bold" FontSize="20" Click="Charging3_Click"/>
        <Button x:Name="Charging4" Content="200₪" HorizontalAlignment="Left" Margin="337,267,0,0" VerticalAlignment="Top" Height="27" Width="75" FontWeight="Bold" FontSize="20" Click="Charging4_Click"/>
        <Label x:Name="Balance1" Foreground="White" FontWeight="Bold" FontSize="20" Content="Blance inquiry" HorizontalAlignment="Left" Margin="137,33,0,0" VerticalAlignment="Top"/>
        <Image Margin="26,267,469,31" Source="Credit-removebg-preview.png" Stretch="Fill"/>

