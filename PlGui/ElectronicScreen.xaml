<Window x:Class="PlGui.ElectronicScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="ElectronicScreen" Height="300" Width="450">
    <Grid x:Name="gridStation" Background="#FFB0B0B0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="163*"/>
            <ColumnDefinition Width="256*"/>
            <ColumnDefinition Width="73*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="lineTimingDataGrid" HorizontalAlignment="Left" Height="249" Margin="10,10,0,0" VerticalAlignment="Top" Width="422" Grid.ColumnSpan="3" Background="Black">
            <ListView x:Name="lv"  HorizontalAlignment="Left" Height="165" Margin="35,59,0,0" VerticalAlignment="Top" Width="356">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding LineNumber}" Width="75"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Timing}" Width="200"/>
                        <GridViewColumn DisplayMemberBinding="{Binding SourceStation}" Width="75"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <TextBlock x:Name="timerTextBlock" HorizontalAlignment="Left" Margin="35,18,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Background="White" Width="99" Height="28"/>
          
        </Grid>

    </Grid>
</Window>
