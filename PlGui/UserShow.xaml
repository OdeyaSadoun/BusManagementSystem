<Window x:Class="PlGui.UserShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlGui"
        mc:Ignorable="d"
        Title="UserShow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="r3.jpeg"/>
        </Grid.Background>
        <Button x:Name="Card" Content="Cards" HorizontalAlignment="Left" Margin="35,70,0,0" VerticalAlignment="Top" Width="150" FontWeight="Bold" FontSize="20" Click="Card_Click"/>
        <Button x:Name="lvBus" Content="List Of Buses" HorizontalAlignment="Left" Margin="35,125,0,0" VerticalAlignment="Top" Width="150" FontWeight="Bold" FontSize="20" Click="lvBus_Click"/>
        <Button x:Name="lvLines" Content="List Of Lines" HorizontalAlignment="Left" Margin="35,175,0,0" VerticalAlignment="Top" Width="150" FontWeight="Bold" FontSize="20" Click="lvLines_Click"/>
    </Grid>
</Window>
