<Window x:Class="dotNet5781_03B_0406_3977.EnterDistanceForTravelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_0406_3977"
        mc:Ignorable="d"
        Title="EnterDistanceForTravelWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lable_distance" Content="Number of kilometers on this travel:&#xD;&#xA;" HorizontalAlignment="Left" Margin="205,131,0,0" VerticalAlignment="Top" Height="30" Width="207"/>
        <TextBox x:Name="txtBox_km_to_travel" Text="{Binding currentMileage}" HorizontalAlignment="Left" Height="23" Margin="406,135,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" PreviewKeyDown="enter_km"/>

    </Grid>
</Window>
